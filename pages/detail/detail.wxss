/* pages/detail/detail.wxss */
.detailContainer {
    display: flex;
    flex-direction: column;
}

.head_img {
    width: 100%;
    height: 460rpx;
}

.music {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 200rpx;
    left: 50%;
    margin-left: -30rpx;
}

.avatar_date {
    padding: 10rpx;
}

.avatar_date image {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.avatar_date text {
    font-size: 32rpx;
    vertical-align: middle;
    margin-right: 10rpx;

}
.company {
    font-size: 38rpx;
    font-weight: bold;
    margin-left: 10rpx;
}

.detail_collection_share {
    position: relative;
}
.collection_share {
    float: right;
    margin-right: 50rpx;
}

.collection_share image {
    width: 90rpx;
    height: 90rpx;
    margin-right: 20rpx;
}
.line {
    width: 90%;
    height: 1rpx;
    background: #eee;
    position: absolute;
    top: 45rpx;
    left: 5%;
    z-index:-1;
}

button {
    width: 200rpx;
    height: 80rpx;
}

.content {
    font-size: 32rpx;
    text-indent: 32rpx;
    line-height: 50rpx;
    color: #666;
}